<h1>New Game</h1>

<div>

  <p>
    <ul>
      <%  @letters.each do |item| %>
      <li> <%= item %> </li>
      <% end %>
    </ul>
  </p>


  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label type="text" > Quel est votre plus long nom ? </label>
    <input type="text" name="name" placeholder="Your guess">
    <input name="letters" value="<%= @letters %>" type="hidden">
    <input type="submit">
  </form>

</div>
